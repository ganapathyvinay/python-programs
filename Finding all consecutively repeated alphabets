# Finding a given string has repeated alphabets or not
my_str=input("Type the string: ",)
try:
    fp=str(my_str)
except:
    print("Enter an alphabetical string")
    quit()
my_lst=list(my_str)
print(my_lst)
for i in range(1,len(my_lst)):
    if my_lst[i-1]==my_lst[i]:
        print("The repeated alphabets are: ", my_lst[i-1],my_lst[i])
