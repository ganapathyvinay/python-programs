# Finding a given string has repeated alphabets or not
def repeatedchars(my_str):
  '''
  function to return repeated characters
  '''
  try:
      fp=str(my_str)
  except:
      print("Enter an alphabetical string")
      quit()
  replist = []
  my_lst=list(my_str)
  i=0
  while i<=len(my_lst):
      icr=0
      j=i+1
      if j>=len(my_lst):
          break
      if my_lst[i]==my_lst[j]:
          count=my_lst[i]+my_lst[j]
          rep=j+1
          while rep<=len(my_lst):
              if rep>=len(my_lst):
                  break
              if my_lst[j]==my_lst[rep]:
                  count=count+my_lst[rep]
                  icr=icr+1
              else:
                  break
              j=rep
              rep+=1
          #print("The repeated characters are: ", count)
          replist.append(count)
      i=i+icr+1
  return (replist)
